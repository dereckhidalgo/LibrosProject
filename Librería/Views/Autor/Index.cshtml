@model IEnumerable<Librería.Models.autor>

@{
    ViewBag.Title = "Index";
}

<h2>Área Autor</h2>

<p>
    @Html.ActionLink("Nuevo Autor", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombreAutor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellidoAutor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pais)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreAutor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidoAutor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.edad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pais)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idAutor }) |
            @Html.ActionLink("Details", "Details", new { id=item.idAutor }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idAutor })
        </td>
    </tr>
}

</table>
